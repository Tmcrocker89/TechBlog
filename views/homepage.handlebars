<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-12 project position-relative border border-5 border-dark rounded mt-2 mb-2">
  <div class="col-md-12 d-flex bg-dark text-white position-relative">
    <h2 class="d-flex flex-row bg-dark text-white position-relative">
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
    <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
      <p class="d-flex float-md-right pull-right position-relative ml-auto">Posted by {{project.user.name}} on {{format_date project.date_created}}</p>

    
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
